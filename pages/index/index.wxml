<!--index.wxml-->
<view class="container">
    <view class='management'>
        <view class='left music_play'></view>
        <view class='right'>照片管理</view>
        <view class='right'>我也要玩</view>
    </view>
    <view class='photo'>
        <image wx:for="{{imgs}}" data-index='{{index+1}}' class='small' bindtap='prewImg' 
               mode='widthFix' src="{{item}}"></image>
    </view>
    <view class='notice'>注：自己可以上传多张，每个朋友只能上传一张</view>
    <view class='buttons'>
        <view class='active'>上传照片</view>
        <view class='active'>邀请好友拼图</view>
        <view class=''>生成照片墙</view>
    </view>
</view>
